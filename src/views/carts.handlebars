{{#if isValid}}
<h1 class="d-flex justify-content-center m-2">ðŸ›’Carrito {{id}}</h1>
<div >
  <div class="row row-cols-1 row-cols-md-3 g-4 d-flex justify-content-center m-2">

    {{#each products}}

    <div class="card text-center mt-3 m-2 d-flex justify-content-center " style="width: 18rem; display:flex; justify-content:center">
      <div>
      <img src="{{this.product.thumbnail}}" class="card-img-top m-2" alt="..." style="width: 200px; height: 200px;">

